
public class Tableau {

	public static void main(String[] args) {
		int [] tab = new int [] {3, -8, 14, 4};
		System.out.print("Le tableau initial : ");
		for (int i = 0; i < tab.length; i++) {
		 if(i==0) {
			 System.out.println("( ");
			 } 
		 System.out.println(tab[i]);
		 if(i==tab.length-1) {
			 System.out.println(" )");
		 }else {
			 System.out.println(", ");
		 }
		}
		
	}

}
