
public class lesTableaux {
	int nb= 0;

	int[] tab = { 3, 7, 1, 9, 1, 2, 5 };

	public void tableaux(int[] tab) {

	}

	public int [] remplir1(int nb) {
		int [] tab1 = new int [nb];
		for (int i = 0; i < tab1.length; i++) {
          tab[i]= i;
		}
		return tab1;

	}
	public int [] remplir2(int nb) {
		int [] tab2 = new int [nb];
		for (int i = 0; i < tab2.length; i++) {
			tab [i]= i+ 5;
		}
		return tab2;
	}
	public int [] remplir3(int nb) {
		int [] tab3 = new int [nb];
		for (int i = 0; i < tab3.length; i++) {
			tab [i]= nb-i;
		}
		return tab3;
	}

	public void operation1(int[] tab) {
		int coun = 0;
		for (int i = 0; i < tab.length; i++) {
			if((tab[i] < 2) || (tab[i] > 4)){
				coun++;
			}
		}
		System.out.println("le nombre d'elements qui sont plus grands que 4 ou les plus petits que 2 est "+coun);

	}

	public void operation2(int[] tab) {
		int coun= 0;
		for (int i = 0; i < tab.length; i++) {
			if(tab [i] == 9) {
				coun++;
			}
		}
		System.out.println("le nombre d'éléments de valeur 9 est " +coun);
	}

	public void operation3(int[] tab) {
		int sum= 0;
       for (int i = 0; i < tab.length; i++) {
		sum += tab[i];
	}
       System.out.println("la somme de tous les éléments du tableau est "+sum);
	}

	public void operation4(int[] tab) {
		int sum=0, i;
		double  moyen;
		for (i = 0; i < tab.length; i++) {
			sum+= tab[i];
		}
		moyen = sum/i;
        System.out.println("");
	}

