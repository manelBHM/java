
public class Palindrome {
	
	public static void main(String[] args) {
	
		String str="bonjour";

		String revString = "";
		
		char[] ch=str.toCharArray();
		
		for(int i = ch.length-1; i >= 0; i--) {
			revString=revString+ch[i];
		}
		System.out.println("Exemple1 : \nL'inverse de bonjour est " + revString);
		System.out.println(str+" n'est palindrame");
	
	}	
}
