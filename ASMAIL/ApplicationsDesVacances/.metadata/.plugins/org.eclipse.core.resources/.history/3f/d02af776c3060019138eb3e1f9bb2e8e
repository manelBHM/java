package com.projet.inter;

import java.sql.Date;
import java.text.SimpleDateFormat;

public class Personne implements Ipersonne {
	private int id;
	private String nom;
	private Date dateNais;
	private Double salaire;
	private Profil profil = new Profil();
	
	public Personne(int id, String nom, Date dateNais, Double salaire, Profil profil) {
		super();
		this.id = id;
		this.nom = nom;
		this.dateNais = dateNais;
		this.salaire = salaire;
		this.profil = profil;
	}

	
	public int getId() {
		return id;
	}

	public String getNom() {
		return nom;
	}

	public Date getDateNais() {
		return dateNais;
	}

	public Double getSalaire() {
		return salaire;
	}


	@Override
	public void afficher() {
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
		String date = sdf.format(dateNais);
		
		String strValue = "ID: "+id+" Je suis le "+this.profil.getLibelle()+" mon nom est "+nom+" n√© le "+date+calculerSalair()+" Euros";
		System.out.println(strValue);
		
	}
	public double calculerSalair() {
		
	}

}
